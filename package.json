{
    "name": "sdk-generator",
    "version": "0.0.0",
    "description": "SDK generator based on a weclapp api swagger file",
    "main": "./src/index.ts",
    "author": "weclapp",
    "files": [
        "lib",
        "bin"
    ],
    "scripts": {
        "gen:start": "ts-node -r tsconfig-paths/register src/index.ts --project tsconfig.json",
        "gen:dev": "ts-node-dev --respawn --watch \"static/**/*\" -r tsconfig-paths/register src/index.ts",
        "sdk:build": "cross-env NODE_ENV=production rollup -c rollup.config.js",
        "sdk:dev": "cross-env NODE_ENV=development rollup -c rollup.config.js --watch",
        "start": "npm run gen:start && npm run sdk:build",
        "lint": "eslint {src,tests}/**/*.ts",
        "lint:fix": "npm run lint -- --fix",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:dev": "jest --watch"
    },
    "repository": {
        "type": "git",
        "url": "git@git.internal.weclapp.com:weclapp/weclapp-api/sdk-generator.git"
    },
    "devDependencies": {
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-replace": "^3.0.0",
        "@types/jest": "^27.0.2",
        "@types/node": "^16.10.2",
        "@types/node-fetch": "^2.5.12",
        "@types/yargs": "^16.0.4",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "cross-env": "^7.0.3",
        "eslint": "^7.32.0",
        "jest": "^27.2.4",
        "jest-extended": "^0.11.5",
        "joi": "^17.4.2",
        "openapi-types": "^9.3.0",
        "rollup": "^2.58.0",
        "rollup-plugin-ts": "^1.4.7",
        "rxjs": "^7.3.1",
        "swagger2openapi": "^7.0.8",
        "ts-jest": "^27.0.5",
        "ts-node": "^10.2.1",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.11.0"
    },
    "dependencies": {
        "@types/fs-extra": "^9.0.13",
        "chalk": "^4.1.2",
        "change-case": "^4.1.2",
        "dotenv": "^10.0.0",
        "fs-extra": "^10.0.0",
        "indent-string": "^4.0.0",
        "node-fetch": "^2.6.5",
        "typescript": "^4.4.3",
        "yargs": "^16.2.0"
    }
}
